@{
    var userRole = ViewData["UserRole"] as string;
}
<!-- Sidebar -->
<nav id="sidebar" class="sidebar vh-100 position-fixed d-flex flex-column bg-dark text-light">
    <ul class="nav flex-column px-2">

        <!-- Anasayfa -->
        <li class="nav-item">
            <a class="nav-link text-light" href="/home">
                <i class="bi bi-house-door"></i> Anasayfa
            </a>
        </li>

        <!-- Hastalar Menü (Sub-item Açılır) -->
        <li class="nav-item">
            <a class="nav-link text-light" href="#patientsSubmenu" data-bs-toggle="collapse" aria-expanded="false" aria-controls="patientsSubmenu">
                <i class="bi bi-people"></i> Hastalar <i class="bi bi-chevron-down ms-auto"></i>
            </a>
            <div class="collapse" id="patientsSubmenu">
                <ul class="nav flex-column ms-3">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/patients/add">
                            <i class="bi bi-person-plus"></i> Hasta Ekle
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/patients/list">
                            <i class="bi bi-list"></i> Hasta Listesi
                        </a>
                    </li>
                </ul>
            </div>
        </li>

        <!-- Ürünler Menü (Sub-item Açılır) -->
        <li class="nav-item">
            <a class="nav-link text-light" href="#productsSubmenu" data-bs-toggle="collapse" aria-expanded="false" aria-controls="productsSubmenu">
                <i class="bi bi-box-seam"></i> Ürünler <i class="bi bi-chevron-down ms-auto"></i>
            </a>
            <div class="collapse" id="productsSubmenu">
                <ul class="nav flex-column ms-3">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/products/add">
                            <i class="bi bi-plus-circle"></i> Ürün Ekle
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/products/list">
                            <i class="bi bi-list"></i> Ürün Listesi
                        </a>
                    </li>
                </ul>
            </div>
        </li>

        <!-- Admin Menüsü (Sub-item Açılır) -->
        @if (userRole == "Admin")
        {
            <li class="nav-item">
                <a class="nav-link text-light" href="#reportsSubmenu" data-bs-toggle="collapse" aria-expanded="false" aria-controls="reportsSubmenu">
                    <i class="bi bi-graph-up"></i> Raporlar <i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <div class="collapse" id="reportsSubmenu">
                    <ul class="nav flex-column ms-3">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/reports/daily">
                                <i class="bi bi-calendar-day"></i> Günlük Rapor
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/reports/monthly">
                                <i class="bi bi-calendar-month"></i> Aylık Rapor
                            </a>
                        </li>
                    </ul>
                </div>
            </li>
        }

        <!-- Çıkış Yap -->
        <li class="nav-item">
            <a class="nav-link text-light" href="auth/logout">
                <i class="bi bi-box-arrow-right"></i> Çıkış Yap
            </a>
        </li>

    </ul>
</nav>
