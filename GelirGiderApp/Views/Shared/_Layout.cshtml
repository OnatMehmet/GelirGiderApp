
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- DataTables Kütüphanesi -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 sidebar">
            <div class="text-center" style="font-weight:700; font-size:24px; margin:45px;">
                MONATSOFT
                <hr />
            </div>
            <ul class="nav flex-column">
                <!-- Home -->
                <li class="nav-item">
                    <a class="nav-link" href="/home">
                        <i class="bi bi-house-door"></i> Anasayfa
                    </a>
                </li>

                <!-- Patients -->
                <li class="nav-item">
                    <a class="nav-link" href="#patientsSubmenu" data-bs-toggle="collapse" aria-expanded="false" aria-controls="patientsSubmenu">
                        <i class="bi bi-people"></i> Hasta İşlemleri <i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse" id="patientsSubmenu">
                        <ul class="nav flex-column px-2">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Create", "Patient")">
                                    <i class="bi bi-person-plus"></i> Hasta Ekle
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Patient")">
                                    <i class="bi bi-people"></i> Hasta Listesi
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                <!-- Products -->
                <li class="nav-item">
                    <a class="nav-link" href="#productsSubmenu" data-bs-toggle="collapse" aria-expanded="false" aria-controls="productsSubmenu">
                        <i class="bi bi-box-seam"></i> Ürün İşlemleri <i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse" id="productsSubmenu">
                        <ul class="nav flex-column px-2">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Create", "Product")">
                                    <i class="bi bi-plus-circle"></i> Ürün Ekle
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Product")">
                                    <i class="bi bi-list"></i> Ürün Listesi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "ProductType")">
                                    <i class="bi bi-box-seam"></i> Ürün Tipi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Product")">
                                    <i class="bi bi-list"></i> Ürün Fiyatlandırma
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                <!-- Sales -->
                <li class="nav-item">
                    <a class="nav-link" href="#salesSubmenu" data-bs-toggle="collapse" aria-expanded="false" aria-controls="salesSubmenu">
                        <i class="bi bi-currency-dollar"></i> Satış İşlemleri <i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse" id="salesSubmenu">
                        <ul class="nav flex-column px-2">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Create", "Sales")">
                                    <i class="bi bi-plus-circle"></i> Satış Ekle
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Sales")">
                                    <i class="bi bi-list"></i> Satış Listesi
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <!-- User Management -->
                @*                 @if (User.IsInRole("Admin"))
                { *@
                <li class="nav-item">
                    <a class="nav-link" href="#usersSubmenu" data-bs-toggle="collapse" aria-expanded="false" aria-controls="usersSubmenu">
                        <i class="bi bi-person-plus"></i> Kullanıcı Yönetimi <i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse" id="usersSubmenu">
                        <ul class="nav flex-column px-2">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Create", "User")">
                                    <i class="bi bi-plus-circle"></i> Yeni Kullanıcı Ekle
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "User")">
                                    <i class="bi bi-list"></i> Kullanıcı Listesi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Create", "Role")">
                                    <i class="fa-brands fa-critical-role"></i> Yeni Rol Ekle
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Role")">
                                    <i class="bi bi-list"></i> Rol Listesi
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                @* } *@
            </ul>
        </div>

        <!-- Main Content Area -->
        <div class="col-md-10">
            <div class="content-container p-4">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="container-fluid d-flex justify-content-between align-items-center">
                        <!-- Arama kutusu sola yerleştirildi -->
                        <div class="d-flex flex-grow-1 justify-content-start">
                            <input class="form-control text-center" type="text" placeholder="Ara" style="width:350px; border-radius:20px">
                        </div>

                        <!-- Kullanıcı menüsü sağa yerleştirildi (Çıkış ve Profil) -->
                        <div class="d-flex align-items-center">

                            <div class="dropdown">
                                <button class="btn dropdown-toggle d-flex align-items-center border-0" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-2 fs-5"></i> @await Component.InvokeAsync("UserInfo")
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm p-2" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Index", "Profile")">
                                            <i class="bi bi-person me-2"></i> Profilim
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="@Url.Action("Logout", "Account")">
                                            <i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
