<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GelirGiderApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GelirGiderApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <title>@ViewData["Title"] - Monat Yazılım</title>
</head>
<body>
    @if (ViewBag.Username != null)
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand ms-4" href="#">&nbsp;&nbsp;  Monatsoft</a>
                <div class="d-flex align-items-center">

                    <span class="navbar-text me-4">
                        <strong>Hoşgeldiniz, @ViewBag.Username</strong>
                    </span>

                    <a href="@Url.Action("Logout", "Auth")" class="btn btn-danger d-flex align-items-center">
                        <i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap
                    </a>
                </div>
            </div>
        </nav>

        <div>
            @Html.Partial("Sidebar")
        </div>
    }


    <div class="content" style="margin-left: 250px; padding: 20px;">
        @RenderBody()
    </div>

    <footer class="border-top footer text-center">
        <div class="container">
            &copy; @DateTime.UtcNow.Year - MonatSoft Tüm Hakları saklıdır.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
