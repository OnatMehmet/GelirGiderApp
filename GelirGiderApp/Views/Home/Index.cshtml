@{
    ViewData["Title"] = "Gelir Gider Yönetimi";
}

@{
    int totalPatients = ViewBag.TotalPatients;
    int totalProduct = ViewBag.TotalProducts;
    decimal totalIncome = ViewBag.TotalIncome;
    decimal totalExpense = ViewBag.TotalExpense;
    decimal totalSales = ViewBag.TotalSales;
    decimal totalRemainingPayments = ViewBag.TotalRemainingPayments;
}

<div class="container mt-4">
    <div class="row g-3">
        <!-- Hasta Sayısı -->
        <div class="col-lg-4 col-md-6">
            <div class="card text-white bg-primary shadow-sm d-flex align-items-center justify-content-center text-center" style="min-height: 150px;">
                <div class="card-header w-100"><i class="fas fa-users"></i> Toplam Hasta</div>
                <div class="card-body">
                    <h4 class="card-title mb-0">@totalPatients</h4>
                </div>
            </div>
        </div>

        <!-- Toplam Ürün -->
        <div class="col-lg-4 col-md-6">
            <div class="card text-white bg-info shadow-sm d-flex align-items-center justify-content-center text-center" style="min-height: 150px;">
                <div class="card-header w-100"><i class="fas fa-boxes"></i> Toplam Ürün</div>
                <div class="card-body">
                    <h4 class="card-title mb-0">@totalProduct</h4>
                </div>
            </div>
        </div>

        <!-- Toplam Satış -->
        <div class="col-lg-4 col-md-6">
            <div class="card text-white bg-secondary shadow-sm d-flex align-items-center justify-content-center text-center" style="min-height: 150px;">
                <div class="card-header w-100"><i class="fas fa-chart-line"></i> Toplam Satış</div>
                <div class="card-body">
                    <h4 class="card-title mb-0">@totalSales</h4>
                </div>
            </div>
        </div>

        <!-- Toplam Gider -->
        <div class="col-lg-4 col-md-6">
            <div class="card text-white bg-danger shadow-sm d-flex align-items-center justify-content-center text-center" style="min-height: 150px;">
                <div class="card-header w-100"><i class="fas fa-shopping-cart"></i> Toplam Maliyet</div>
                <div class="card-body">
                    <h4 class="card-title mb-0">@totalExpense ₺</h4>
                </div>
            </div>
        </div>

        <!-- Toplam Gelir -->
        <div class="col-lg-4 col-md-6">
            <div class="card text-white bg-success shadow-sm d-flex align-items-center justify-content-center text-center" style="min-height: 150px;">
                <div class="card-header w-100"><i class="fas fa-money-bill-wave"></i> Toplam Gelir</div>
                <div class="card-body">
                    <h4 class="card-title mb-0">@totalIncome ₺</h4>
                </div>
            </div>
        </div>

        <!-- Kalan Ödemeler -->
        <div class="col-lg-4 col-md-6">
            <div class="card text-white bg-warning shadow-sm d-flex align-items-center justify-content-center text-center" style="min-height: 150px;">
                <div class="card-header w-100"><i class="fas fa-wallet"></i> Yapılacak Ödemeler</div>
                <div class="card-body">
                    <h4 class="card-title mb-0">@totalRemainingPayments ₺</h4>
                </div>
            </div>
        </div>
    </div>
</div>
