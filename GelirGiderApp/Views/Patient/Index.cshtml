@model IEnumerable<GelirGiderApp.Models.Entities.Patient>

@{
    ViewData["Title"] = "Hastalar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a href="@Url.Action("Create", "Patient")" class="btn btn-primary">Yeni Hasta Ekle</a>
</p>
<table id="patientsTable" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Telefon</th>
            <th>Email</th>
            <th>Adres</th>
            <th>Başlama Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hasta in Model)
        {
            <tr>
                <td>@hasta.Name</td>
                <td>@hasta.PhoneNumber</td>
                <td>@hasta.Email</td>
                <td>@hasta.Address</td>
                <td>@hasta.StartDate.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Edit", "Patient", new { id = hasta.Id })" class="btn btn-warning">Düzenle</a>
                    <a href="@Url.Action("Delete", "Patient", new { id = hasta.Id })" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- DataTables Kütüphanesi -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#patientsTable').DataTable({
            "language": {
                "decimal": "",
                "emptyTable": "Tabloda herhangi bir veri yok",
                "info": "_TOTAL_ kayıttan _START_ - _END_ arasındaki kayıtlar gösteriliyor",
                "infoEmpty": "Gösterilecek kayıt yok",
                "infoFiltered": "(_MAX_ toplam kayıttan filtrelendi)",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "_MENU_ kayıt göster",
                "loadingRecords": "Yükleniyor...",
                "processing": "İşleniyor...",
                "search": "Ara:",
                "zeroRecords": "Eşleşen kayıt bulunamadı",
                "paginate": {
                    "first": "İlk",
                    "last": "Son",
                    "next": "Sonraki",
                    "previous": "Önceki"
                },
                "aria": {
                    "sortAscending": ": artan sütun sıralamasını etkinleştir",
                    "sortDescending": ": azalan sütun sıralamasını etkinleştir"
                }
            },
            "paging": true,
            "searching": true,
            "ordering": true,
            "info": true
        });
    });
</script>
