@using GelirGiderApp.Models.ViewModels
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model EditUserModel

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h4><i class="fas fa-edit"></i> Kullanıcı Düzenle</h4>
                </div>
                <div class="card-body">
                    <form method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />

                        <!-- Ad Alanı -->
                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="form-label">Ad</label>
                            <input asp-for="FirstName" class="form-control" required />
                        </div>
                        <!--Soyad-->
                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="form-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" required />
                        </div>

                        <!-- Kullanıcı Adı Alanı -->
                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="UserName" class="form-control" required />
                        </div>
                        <!-- Email Alanı -->
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input type="email" asp-for="Email" class="form-control" required />
                        </div>
                        <!-- Telefon Alanı -->
                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                            <input type="tel" asp-for="PhoneNumber" class="form-control" required />
                        </div>
                        <!-- Parola -->
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Parola</label>
                            <input asp-for="Password" class="form-control" type="password"  required />
                        </div>                       
                        <!-- Parola -->
                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Parola Tekrar</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Rol -->
                        <div class="mb-3">
                            <label>Rol Seç</label>
                            <select asp-for="SelectedRole" asp-items="@(new SelectList(Model.Roles))" class="form-control">
                                <option value="">Rol Seç</option>
                            </select>
                            <div class="invalid-feedback">
                                Lütfen bir ürün tipi seçin.
                            </div>
                        </div>
                        <!-- Açıklama -->
                 @*        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Açıklama</label>
                            <input asp-for="Description" class="form-control" />
                        </div> *@

                        <!-- Butonlar -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                            <a href="@Url.Action("Index", "User")" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        // Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}