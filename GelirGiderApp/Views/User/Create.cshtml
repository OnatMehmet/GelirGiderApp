@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GelirGiderApp.Models.Entities.Patient

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Yeni Hasta Ekle</h4>
                </div>
                <div class="card-body">
                    <!-- Form Başlangıcı -->
                    <form method="post" class="needs-validation" novalidate>
                        <div class="row">
                            <!-- Ad Alanı -->
                            <div class="col-md-6 mb-3">
                                <label for="Name" class="form-label">Ad</label>
                                <input type="text" class="form-control" id="FirstName" name="FirstName" required />
                                <div class="invalid-feedback">
                                    Lütfen adı girin.
                                </div>
                            </div>
                            <!-- Soyad Alanı -->
                            <div class="col-md-6 mb-3">
                                <label for="Name" class="form-label">Soyad</label>
                                <input type="text" class="form-control" id="LastName" name="LastName" required />
                                <div class="invalid-feedback">
                                    Lütfen adı girin.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!-- Email Alanı -->
                            <div class="col-md-6 mb-3">
                                <label for="Email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="Email" name="Email" required />
                                <div class="invalid-feedback">
                                    Lütfen geçerli bir email adresi girin.
                                </div>
                            </div>

                            <!-- Kullanıcı Alanı -->
                            <div class="col-md-6 mb-3">
                                <label for="Address" class="form-label">Kullanıcı Adı</label>
                                <input type="text" class="form-control" id="Username" name="Username" required />
                                <div class="invalid-feedback">
                                    Lütfen adresi girin.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!-- Parola Alanı -->
                            <div class="col-md-6 mb-3">
                                <label for="Address" class="form-label">Şifre</label>
                                <input type="text" class="form-control" id="Password" name="Password" required />
                                <div class="invalid-feedback">
                                    Lütfen adresi girin.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                            <label for="ProductId" class="form-label">Rol</label>
                                <select id="RoleId" name="RoleId" class="form-select" required>
                                <option value="">Rol Seçin...</option>
                                @foreach (var role in ViewBag.Roles)
                                {
                                    <option value="@role.Id">@role.Name</option>
                                }
                            </select>
                        </div>
                        </div>
                        <div class="row">

                            <!-- Başlama Tarihi Alanı -->
                            <div class="col-md-6 mb-3">
                                <label for="CreateDate" class="form-label">Başlama Tarihi</label>
                                <input type="date" class="form-control" id="CreateDate" name="CreateDate" required />
                                <div class="invalid-feedback">
                                    Lütfen doğum tarihini seçin.
                                </div>
                            </div>
                            <!-- Açıklama Alan -->
                            <div class="col-md-6 mb-3">
                                <label for="Description" class="form-label">Açıklama</label>
                                <textarea class="form-control" id="Description" name="Description" rows="2"></textarea>
                                <div class="invalid-feedback">
                                    Bu alanı doldurmanız gerekmektedir.
                                </div>
                            </div>
                        </div>

                        <!-- Submit Butonu -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Kullanıcı Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
