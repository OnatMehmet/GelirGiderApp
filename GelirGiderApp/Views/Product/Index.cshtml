@using GelirGiderApp.Models.Entities
@model List<Product>
@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="container mt-4">
    <h2>Ürün Listesi</h2>

    <p>
        <a href="@Url.Action("Create", "Product")" class="btn btn-primary">Yeni Ürün Ekle</a>
    </p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Fiyat</th>
                <th>Maliyet</th>
                <th>Açıklama</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.SalePrice ₺</td>
                    <td>@product.Cost</td>
                    <td>@product.Description</td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="loadPartial('Edit', @product.Id)">Düzenle</button>
                        <a href="@Url.Action("Delete", "Product", new { id = product.Id })" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div id="contentArea"></div>
</div>




